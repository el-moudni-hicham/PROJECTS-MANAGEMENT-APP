                        <Insets left="30.0" />
                     </VBox.margin>
                    </Button>
               </children>
            </VBox>
              <TableView prefHeight="326.0" prefWidth="780.0">
                  <columns>
                      <TableColumn prefWidth="75.0" text="Name" />
                      <TableColumn prefWidth="95.0" text="Description" />
                      <TableColumn prefWidth="140.0" text="Manager" />
                      <TableColumn prefWidth="188.0" text="Start Date" />
                      <TableColumn prefWidth="130.0" text="End Date" />
                      <TableColumn prefWidth="188.0" text="Actions" />
                  </columns>
              </TableView>
         </children>
         <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
         </padding>
      </VBox>
    </children>
